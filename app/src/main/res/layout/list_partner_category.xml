<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical"
  android:layout_marginBottom="5dp"
  android:layout_marginLeft="10dp"
  android:layout_marginRight="10dp"
  android:layout_marginTop="5dp"
  app:cardCornerRadius="4dp"
  app:cardElevation="1dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
      android:id="@+id/list_partnercategory_icon"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginLeft="10dp" />

    <TextView
      android:id="@+id/list_partnercategory_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/list_partnercategory_icon"
      android:layout_centerVertical="true"
      android:layout_marginLeft="20dp"
      android:layout_toRightOf="@+id/list_partnercategory_icon"
      android:gravity="center|left"
      tools:text="Title" />

    <ImageView
      android:id="@+id/list_partnercategory_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_margin="10dp"
      android:src="@drawable/ic_arrow_down" />

  </RelativeLayout>

</android.support.v7.widget.CardView>

</FrameLayout>
