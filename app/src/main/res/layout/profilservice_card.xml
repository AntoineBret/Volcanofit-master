<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/mservice_cardview"
      android:layout_gravity="center_vertical"
      app:cardCornerRadius="4dp"
      app:cardElevation="1dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:id="@+id/ln_service_thumbnail"
          >

          <ImageView
            android:id="@+id/mservice_thumbnail"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        </RelativeLayout>

        <TextView
          android:id="@+id/mservice_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="15dp"
          android:paddingTop="10dp"
          android:paddingBottom="5dp"
          android:layout_toRightOf="@+id/ln_service_thumbnail"
          android:textSize="16dp" />

        <TextView
          android:id="@+id/mservice_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="14dp"
          android:paddingLeft="15dp"
          android:textColor="@android:color/black"
          android:layout_toEndOf="@+id/ln_service_thumbnail"
          android:layout_below="@+id/mservice_title" />

      </RelativeLayout>

    </android.support.v7.widget.CardView>

  </LinearLayout>

</FrameLayout>
